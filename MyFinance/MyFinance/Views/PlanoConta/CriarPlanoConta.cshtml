@model PlanoContaModel

@{
    ViewData["Title"] = "CriarPlanoConta";
}

<h3>Criar Plano de Contas</h3>

<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">
    <div class="form-group">
        <div class="form-group">
            <label>Descrição:</label>
            <input type="text" class="form-control" asp-for="Descricao" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label>Tipo:</label>
        <div class="radio">
            <label>
                @Html.RadioButtonFor(model => model.Tipo, "R", new { value = "R" })
                Receita
            </label>
        </div>
        <div class="radio">
            <label>
                @Html.RadioButtonFor(model => model.Tipo, "D", new { value = "D",  })
                Despesa
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>